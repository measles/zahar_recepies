	<recipe id="10">
		<title>Памаранчавая восень</title>
		<category>Салат</category>
		<source>Андрэй Захарэвіч</source>
		<rating>4/5 stars</rating>
		<preptime>1 minute</preptime>
		<cooktime>15 minutes</cooktime>
